<div class="container">
  <h1 class="page-header">Things to do</h1>

    <ul class="list-group">
      <li class="list-group-item">
        <h3><strong><%= todoItem.title %></strong></h3>
        <h5>Description: <%= todoItem.description %></h5>
        <h5>Completed:
          <% if (todoItem.completed == true) { %>
            <span class="label label-success">Yes</span>
          <% } else if (todoItem.completed == false) { %>
            <span class="label label-danger">No</span>
          <% } %>
        </h5>

        <a class="btn btn-primary" href=<%= "/todo/" + todoItem._id + "/edit" %>>Edit</a>

        <form class="deleteForm "method="POST" action=<%= "/todo/" + todoItem._id + "?_method=DELETE" %>>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <a class="btn btn-info" href="/todo/">List All</a>

      </li>
    </ul>

</div>
